.phone
    font-family $magistralbold
    text-align: left
    vertical-align: middle
    &__icon
        display inline-block
        position: relative
        vertical-align: middle
        width: 40px
        height 40px
        border 1px solid rgba(#fff,.3)
        border-radius: 2px

        &:before
            content: ''
            width 20px
            height 20px
            background url(../images/icon-phone.png) no-repeat center
            position: absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

    &__number
        margin-left 30px
        vertical-align: middle
        display inline-block
    &__number-prefix
        color $color-second
        font-size: 16px
        margin-bottom: 5px
    &__number-main
        color #fff
        font-size: 24px

    &_big
        & ^[0]__number
            margin-top 15px
        & ^[0]__number-main
            font-size: $fsH2
        & ^[0]__number-prefix
            font-size: $fsH3
            font-family: $magistral
        & ^[0]__number,
        & ^[0]__icon
            vertical-align: top
