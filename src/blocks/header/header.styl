.header
    width 100%
    background-image linear-gradient(to bottom, rgba(#000, 0.4), rgba(#000, 0.0))
    position: absolute
    top 0
    &__container
        display flex
        justify-content: space-between
        align-items: center
        min-height: 120px
        width: 100%
        height: 0px // Для IE 11 иначе не воспринимает значение min-height

    &__item
        flex 1 1
        &:last-child
            flex 3 1

    &_error
        background: transparent
        text-align: center
        & ^[0]__container
            justify-content: center
        & ^[0]__item
            flex auto
            display: inline-block;
