.section
    width 100%
    background-size cover
    background-position center
    position relative
    padding 80px 0

    &_intro
        background-image url(../images/banner-main.png)
        min-height 700px

    &_bg-order
        background-image url(../images/banner-order.png)

    &_icon-title
        padding-top 85px
        &:before
            content ""
            position absolute
            height 72px
            width 40px
            pos-center-w()
            top 0
            background-position: center top
            background-repeat: no-repeat
            z-index: -1

        &-ground-1
            &:before
                background-image url(../images/section-icon-ground-1.png)
        &-ground-2
            &:before
                background-image url(../images/section-icon-ground-2.png)

    &__title
        text-align: center
        
    &__scroll-bot
        position: absolute
        pos-center-w()
        flex-center()
        top -50px
        width 80px
        height 80px
        border-radius 50%
        background-color: #fff
