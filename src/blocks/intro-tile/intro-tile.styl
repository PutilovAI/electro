.intro-tile
    position: absolute
    bottom -15px

    &__item
        width 100%
        height 230px
        text-align: center
        color #fff
        padding 30px
        background-color $color-blue-dark
        background-repeat no-repeat
        background-position: center 10%

        &_prod
            background-image url(..images/intro-tile-big-1.png)
        &_home
            background-image url(..images/intro-tile-big-2.png)
        &_public
            background-image url(..images/intro-tile-big-3.png)

    &__item-icon
        height 90px
        width 100%
        margin-bottom 20px
        background-repeat no-repeat
        background-position: center

        &_prod
            background-image url(..images/intro-tile-1.png)
        &_home
            background-image url(..images/intro-tile-2.png)
        &_public
            background-image url(..images/intro-tile-3.png)
