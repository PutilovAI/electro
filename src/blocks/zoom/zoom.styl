.zoom
    position: relative
    cursor: pointer

    &__img
        position: relative
        display: block
        width: 100%
        z-index: 1

    &:after, &:before
        content ''
        position: absolute
        opacity: 0
        transition: all 0.3s linear

    &:before
        width 100%
        height 100%
        top 0
        left 0
        background-color rgba($color-main, 0.8)
        z-index: 2
    &:after
        pos-center()
        width 60px
        height @width
        border-radius: 2px
        border 2px solid $color-orange
        background: url(../images/sprite-icon.png) no-repeat
        background-position -359px 3px
        z-index: 3

    &:hover
        &:after, &:before
            opacity: 1
