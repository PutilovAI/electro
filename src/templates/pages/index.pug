extend ../layouts/main

block content
	.page
		section.section.section_intro
			header.header
				.container
					.header__container
						.header__item
							.logo
						.header__item.h-align_right
							.button Получить консультацию
							.phone.h-display_inline-block.h-ml_30
								.phone__icon
								.phone__number
									.phone__number-prefix +7(343)
									.phone__number-main 202-04-90

			.intro
				h1.intro__title Электрощиты
				.intro__line
				.intro__desc
					|С гарантией&nbsp;
					span.h-color_yellow 5 лет

			.intro-tile
				.container
					.row
						.col_4
							.intro-tile__item.intro-tile__item_prod
								.intro-tile__item-icon.intro-tile__item-icon_prod
								.intro-tile__item-text Для производственных помещений
						.col_4
							.intro-tile__item.intro-tile__item_home
								.intro-tile__item-icon.intro-tile__item-icon_home
								.intro-tile__item-text Для частного дома
						.col_4
							.intro-tile__item.intro-tile__item_public
								.intro-tile__item-icon.intro-tile__item-icon_public
								.intro-tile__item-text Для общественных помещений

		section.section.section_icon-title.section_icon-title-ground-1
			.container
				h2.section__title.h-mb_60
					|Выбирая нас,&nbsp;
					span.h-color_blue.h-text_bold-mag  вы получаете:

				.row
					.col_6
						.pic-present
							.pic-present__flag.pic-present__flag_top
							.pic-present__flag.pic-present__flag_bot
							img.pic-present__img(src='./assets/images/pic-present-1.jpg')
					.col_6
						include ../partials/list-icon.pug

		section.section.section_bg-order.h-color_white
			.section__scroll-bot
				.icon.icon_mouse
			.container
				include ../partials/form-order
				h4.h-align_center Только при заказе с сайта: демонтаж старого щита в подарок!

		section.section.section_icon-title.section_icon-title-ground-2
			.container
				h2.section__title Изготовим любые щиты
				p.section__title-desc.h-mb_60 Типовые и на заказ
			.container.h-pl_0
				.tabs.js-tabs
					ul.tabs__control
						each val,i in ['ВРУ', 'АВР', 'ШР','ЯУО','ШУ','ШК']
							li.tabs__control-item.js-tabs__control(class=(i==0 ? "active":""), data-tab=i)
								span.tabs__control-item-text=val

					.tabs__content
						each val,i in ['Вводно-распределительное устройство', 'АВР', 'ШР','ЯУО','ШУ','ШК']
							.tabs__content-item.js-tabs__content(class=(i==0 ? "active":""),data-tab=i)
								if i==1
									img.tabs__content-img(src='assets/images/pic-present-1.jpg')
								else
									img.tabs__content-img(src='assets/images/img-vru.png')
								h3.tabs__content-title=val

								div.tabs__content-scroll-block-wrapper.js-custom-scroll.scrollbar-outer
									.tabs__content-scroll-block-desc
										each i in [1,2]
											p
												|ВРУ — устройство (электрощит), предназначенное для приёма,
												| распределения, резервирования и учёта электрической энергии,
												| устанавливаемое в жилых и общественных зданиях, а также промышленных
												| производственных помещениях.

								.tabs__content-call
									.tabs__content-call-icon
										.icon.icon_wire
									.tabs__content-call-text
										|Закажите ВРУ сейчас и получите демонтаж старого оборудования и установку нового в подарок!
			.container.h-align_center.h-mt_30
				.button.button_action.button_long Заказать щит

		section.section.section_bg-off
			.section__scroll-bot
				.icon.icon_mouse

			.container
				h2.section__title Наши работы

				.carousel.carousel_work
					.carousel__owl.js-carousel-work.owl-carousel.js-carousel
						each n in [1,2,3,4,2,3,1,4]
							.carousel__item
								.zoom
									img.zoom__img(src='./assets/images/slider-works-'+n+'.png')

					.carousel__control.carousel__control_prev.js-carousel__control-prev
					.carousel__control.carousel__control_next.js-carousel__control-next

				h2.section__title Только лучшие поставщики
				p.section__title-desc.h-mb_30 Мы работаем с поставщиками напрямую, что гарантирует низкие цены.

				.carousel.carousel_firms
					.carousel__owl.js-carousel-firms.owl-carousel.js-carousel
						each n in [1,2,3,4,5,6,2,4,1,3]
							.carousel__item
								img(src='./assets/images/slider-firms-'+n+'.png')

					.carousel__control.carousel__control_prev.js-carousel__control-prev
					.carousel__control.carousel__control_next.js-carousel__control-next




block popup
