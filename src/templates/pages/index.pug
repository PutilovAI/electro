extend ../layouts/main

block content
	.page
		section.section.section_intro
			header.header
				.container
					.header__container
						.header__item
							.logo
						.header__item.h-align_right
							.button Получить консультацию
							.phone.h-display_inline-block.h-ml_30
								.phone__icon
								.phone__number
									.phone__number-prefix +7(343)
									.phone__number-main 202-04-90

			.intro
				h1.intro__title Электрощиты
				.intro__line
				.intro__desc
					|С гарантией
					span.h-color_yellow 5 лет

			.intro-tile
				.container
					.row
						.col_4
							.intro-tile__item.intro-tile__item_prod
								.intro-tile__item-icon.intro-tile__item-icon_prod
								.intro-tile__item-text Для производственных помещений
						.col_4
							.intro-tile__item.intro-tile__item_home
								.intro-tile__item-icon.intro-tile__item-icon_home
								.intro-tile__item-text Для частного дома
						.col_4
							.intro-tile__item.intro-tile__item_public
								.intro-tile__item-icon.intro-tile__item-icon_public
								.intro-tile__item-text Для общественных помещений

		section.section.section_icon-title.section_icon-title-ground-1
			.container
				h2.section__title
					|Выбирая нас,&nbsp;
					span.h-color_blue.h-text_bold-mag  вы получаете:

				.row
					.col_6
						.pic-present
							.pic-present__flag.pic-present__flag_top
							.pic-present__flag.pic-present__flag_bot
							img.pic-present__img(src='./assets/images/pic-present-1.jpg')
					.col_6
						ul.list-icon
							li.list-icon__item
								.list-icon__item-text Гарантию на оборудование
								.list-icon__item-icon
									.icon.icon_sheld
							li.list-icon__item
								.list-icon__item-text Доступные и честные цены
								.list-icon__item-icon
									.icon.icon_price
							li.list-icon__item
								.list-icon__item-text Только качественные комплектующие
								.list-icon__item-icon
									.icon.icon_check
							li.list-icon__item
								.list-icon__item-text Квалифицированный и опытный персонал
								.list-icon__item-icon
									.icon.icon_user
							li.list-icon__item
								.list-icon__item-text Защиту оборудования от пыли и влаги
								.list-icon__item-icon
									.icon.icon_wet
							li.list-icon__item
								.list-icon__item-text Безопасность обслуживания
								.list-icon__item-icon
									.icon.icon_lock

block popup
