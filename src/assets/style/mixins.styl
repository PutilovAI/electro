pos-center()
    position: absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

pos-center-w()
    position: absolute
    left 50%
    transform translateX(-50%)

pos-center-h()
    position: absolute
    top 50%
    transform translateY(-50%)

flex-center()
    display flex
    align-items: center
    justify-content: center
