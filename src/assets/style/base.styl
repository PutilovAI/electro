
html
body
	height 100%
	width 100%
	font-family $base-ff
	font-size $base-fs

body
	-webkit-font-smoothing antialiased

a
	color $color-link
	transition color .2s linear

	&:hover
		color $color-link-hover
h1
	margin-bottom 20px
h2
	margin-bottom 20px
h3
	margin-bottom 10px
h4
	margin-bottom 10px
h5
	text-transform uppercase
p
	margin-bottom 20px
	line-height $base-lh

ul
	margin 8px 0 25px

li
	position relative
	padding-left 20px
	margin-bottom 8px
	line-height $line-height-norm
	&:before
		content ''
		position absolute
		width 5px
		height 5px
		background-color $color-orange
		top 9px
		left 0
		border-radius 50%

b, strong
	font-family $base-ff-bold
